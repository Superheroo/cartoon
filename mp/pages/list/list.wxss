/* pages/list/list.wxss */
.resList{
  height: 100vh;
  box-sizing: border-box;
  /* padding-bottom: 30px; */
}
.resList .resCard{
  width:90%;
  margin: 10rpx auto 40rpx; 
  min-height: 300rpx;
  display: flex;
  flex-direction: row;
  border-radius:4rpx;
  border: 1px solid #fff;
  box-shadow: 2px 5px 15px #333; 
}
.resCard .cover{
  flex: 3;
}
.resCard .cover image{
  width: 100%;
}
.resCard .info{
  flex: 7;
  width: 70%;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color:#969696;
  padding-top: 2vw;
  padding-left:2vw;
  box-sizing: border-box; 
}
.resCard .info-title{
  font-size:20px;
  color: #333;
}
.resCard .info-title,.resCard .info-area,.resCard .info-type{
  margin-bottom: 2.5vw;
}
.resCard .info-desc{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}