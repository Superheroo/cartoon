/**index.wxss**/

.card{
  width: 92%;
  margin: 10px auto 20px;
  padding: 4px ;
  display: flex;
  border-radius:4rpx;
  border: 1px solid #fff;
  box-shadow: 2px 5px 15px #333; 
}
.card-hover{
   background: #F5F6F7; 
}
.card .cover{
  flex:3;
}
.card .cover image{
  width: 100%;
}

.card .info{
  flex:7;
  padding:0 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color:#969696;
}

.card .info-title{
  font-size:18px;
  color: #333;
}

.card .info-title,.card .info-hot,.card .info-tag{
  margin-bottom: 2vw;
}
.card .info-tag text{
  margin-right: 20rpx;
}

.card .info-desc{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
}